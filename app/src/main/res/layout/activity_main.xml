<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center" android:orientation="vertical"
    tools:context=".MainActivity">

    <com.lb.automated_text_switcher.library.AutomatedTextSwitcher
        android:id="@+id/automatedTextSwitcher" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_gravity="center" android:inAnimation="@android:anim/fade_in"
        android:outAnimation="@android:anim/fade_out"
        app:textLayoutResId="@layout/changing_text"/>

    <Button
        android:id="@+id/singleTextButton" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="single change"/>

    <Button
        android:id="@+id/multipleTextButton" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="multiple texts"/>

</LinearLayout>
